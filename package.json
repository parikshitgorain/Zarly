{
  "name": "discord-saas-bot",
  "version": "1.0.0",
  "description": "Production-grade multi-tenant Discord SaaS bot system",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:bot": "npm run dev --workspace=packages/bot",
    "dev:api": "npm run dev --workspace=packages/api",
    "dev:worker": "npm run dev --workspace=packages/worker",
    "dev:dashboard": "npm run dev --workspace=packages/dashboard",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:coverage": "npm run test:coverage --workspaces",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\""
  },
  "devDependencies": {
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
